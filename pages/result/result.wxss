.bgContainer {
    background-color: #fff;
    color: #282828;
}

.txtContentView {
    width: 670rpx;
    height: 852rpx;
    background: rgba(233, 243, 254, 1);
    box-shadow: 0px 4rpx 12rpx 0px rgba(85, 134, 244, 0.3);
    border-radius: 16rpx;
    margin: 20rpx auto 0;
    box-sizing: border-box;
    padding: 40rpx;
}

.userInfoView {
    width: 100%;
    height: 150rpx;
    justify-content: start;
}

.userIcon {
    vertical-align: top;
    margin-right: 40rpx;
}

.userIcon image {
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
    vertical-align: top;
}

.userDes view{
    width: 400rpx;
}

.one-ellipsis{
    font-size: 40rpx;
}

.line {
    width: 590rpx;
    height: 2rpx;
    background: rgba(217, 231, 247, 1);
    margin-top: 40rpx;
}

.sentence{
    font-size: 32rpx;
    padding:34rpx 0 0;
    line-height: 56rpx;
}

.errorTxtView{
    width: 100%;
    height: 100vh;
    box-sizing: border-box;
    padding: 40rpx;
    font-size: 32rpx;
}
